            //>accept the following from the user and calculate the percentage of classes attendance:
            //a)total number of working days
            //b)total number of days for days
            //after calculating  percentage show that,if the percentage is less than 75,then student will not be eligible to write exam
            let WD = parseInt(prompt("Enter WD:"));
            let Absent = parseInt(prompt("Enter Absent:"));
            let attendancePercentage = ((WD - Absent) / WD) * 100;
            if (attendancePercentage < 75) {
                alert(`Attendance Percentage: ${attendancePercentage.toFixed(2)}%\nThe student is not eligible to write the exam.`);
            } else {
                alert(`Attendance Percentage: ${attendancePercentage.toFixed(2)}%\nThe student is eligible to write the exam.`);
            }
